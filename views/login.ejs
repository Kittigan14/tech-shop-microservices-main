    <style>
        * {
            font-family: 'Prompt', sans-serif;
        }
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .btn-primary {
            background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #3730a3 0%, #5b21b6 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
        }
        .login-card {
            backdrop-filter: blur(20px);
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }
        .floating-animation:nth-child(2) {
            animation-delay: 2s;
        }
        .floating-animation:nth-child(3) {
            animation-delay: 4s;
        }
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-20px) rotate(1deg); }
            66% { transform: translateY(10px) rotate(-1deg); }
        }
        .input-field {
            transition: all 0.3s ease;
            border: 2px solid #e5e7eb;
        }
        .input-field:focus {
            border-color: #7c3aed;
            box-shadow: 0 0 0 4px rgba(124, 58, 237, 0.1);
            transform: translateY(-2px);
        }
        .demo-account {
            background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
            border-left: 4px solid #3b82f6;
        }
        .fade-in {
            animation: fadeIn 0.8s ease-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body class="gradient-bg min-h-screen flex items-center justify-center p-4 relative overflow-hidden">
    <!-- Floating Background Elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
        <div class="floating-animation absolute top-1/4 left-1/4 w-32 h-32 bg-white bg-opacity-10 rounded-full"></div>
        <div class="floating-animation absolute top-3/4 right-1/4 w-48 h-48 bg-white bg-opacity-5 rounded-full"></div>
        <div class="floating-animation absolute bottom-1/4 left-1/3 w-24 h-24 bg-white bg-opacity-10 rounded-full"></div>
        <div class="floating-animation absolute top-1/2 right-1/3 w-36 h-36 bg-white bg-opacity-5 rounded-full"></div>
    </div>

    <!-- Background Pattern -->
    <div class="fixed inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);"></div>
    </div>

    <div class="login-card w-full max-w-lg rounded-3xl shadow-2xl p-10 z-10 fade-in">
        <!-- Logo and Title -->
        <div class="text-center mb-8">
            <div class="bg-gradient-to-r from-purple-600 to-indigo-600 w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg transform hover:scale-105 transition-transform">
                <i class="fas fa-shopping-bag text-white text-3xl"></i>
            </div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Tech Shop</h1>
            <p class="text-gray-600 text-lg">เข้าสู่ระบบเพื่อเริ่มช้อปปิ้ง</p>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-8 rounded-lg">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle mr-3 text-xl"></i>
                    <span class="font-medium"><%= error %></span>
                </div>
            </div>
        <% } %>

        <!-- Login Form -->
        <form method="POST" action="/login" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-user mr-2 text-purple-600"></i>ชื่อผู้ใช้หรืออีเมล
                </label>
                <input type="text" 
                       id="username" 
                       name="username" 
                       required 
                       class="input-field w-full px-4 py-4 rounded-xl focus:outline-none"
                       placeholder="กรอกชื่อผู้ใช้หรืออีเมล">
            </div>

            <div>
                <label for="password" class="block text-sm font-semibold text-gray-700 mb-3">
                    <i class="fas fa-lock mr-2 text-purple-600"></i>รหัสผ่าน
                </label>
                <div class="relative">
                    <input type="password" 
                           id="password" 
                           name="password" 
                           required 
                           class="input-field w-full px-4 py-4 rounded-xl focus:outline-none pr-12"
                           placeholder="กรอกรหัสผ่าน">
                    <button type="button" 
                            onclick="togglePassword()" 
                            class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-500 hover:text-purple-600 transition-colors">
                        <i id="password-icon" class="fas fa-eye text-lg"></i>
                    </button>
                </div>
            </div>

            <button type="submit" 
                    class="w-full btn-primary text-white py-4 px-6 rounded-xl font-bold text-lg shadow-lg">
                <i class="fas fa-sign-in-alt mr-3"></i>เข้าสู่ระบบ
            </button>
        </form>

