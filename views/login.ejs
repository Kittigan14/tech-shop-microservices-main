        <!-- Quick Login Buttons -->
        <div class="mt-6 space-y-3">
            <button type="button" 
                    onclick="quickLogin('admin', '12345678')" 
                    class="w-full bg-red-500 text-white py-3 px-4 rounded-xl font-semibold hover:bg-red-600 transition-all transform hover:scale-105">
                <i class="fas fa-crown mr-2"></i>เข้าสู่ระบบเป็น Admin
